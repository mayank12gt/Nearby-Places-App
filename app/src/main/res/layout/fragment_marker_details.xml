<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
            <variable
                name="place"
                type="com.example.nearbyplaces.model.NearbyPlace" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="500dp"


        tools:context=".MarkerDetailsFragment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/drag_handle"
            android:layout_marginTop="12dp"
            android:id="@+id/drag_handle"/>


        <TextView
            android:id="@+id/place_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@{place.name}"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginStart="12dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drag_handle"
            tools:text="Hari Mandir" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/rating_txt"
            android:layout_marginTop="12dp"
            android:text="Rating: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/place_title"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="22sp"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/ratingBarStyleIndicator"
            android:rating="@{place.rating.floatValue()}"
            android:progressTint="@color/quantum_yellow"
            android:id="@+id/place_rating"
            app:layout_constraintStart_toEndOf="@id/rating_txt"
            app:layout_constraintTop_toTopOf="@id/rating_txt"
            app:layout_constraintBottom_toBottomOf="@id/rating_txt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/rating_num"

            android:text="@{`(`+place.userRatingsTotal+`)`}"
            app:layout_constraintStart_toEndOf="@id/place_rating"
            app:layout_constraintTop_toTopOf="@id/place_rating"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place_addr_txt"
            android:layout_marginTop="12dp"
            android:text="Address: "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating_txt"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/place_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"

            android:fontFamily="@font/poppins_medium"
            android:maxWidth="300dp"

            android:text="@{place.vicinity}"

            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@id/place_addr_txt"
            app:layout_constraintTop_toTopOf="@id/place_addr_txt" />


        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/place_image"
                app:riv_corner_radius="6dp"
            app:layout_constraintTop_toBottomOf="@id/place_addr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="12dp"
            bind:imageURL="@{place.photos.get(0).photoReference}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>